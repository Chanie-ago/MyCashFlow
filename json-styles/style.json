{
  "QtBinding": "PySide6",
  "ShowLogs": true,
  "LiveCompileQss": true,
  "QMainWindow": [
    {
      "tittle": "MyCashFlow",
      "icon": ":/font_awesome_regular/icons/font_awesome/regular/money-bill-1.png",
      "frameless": true,
      "trasluscentBg": true,
      "sizeGrip": "sizeGrip",
      "navigation": [
        {
          "minimize": "minimizeBtn",
          "close": "closeBtn",
          "moveWindow": "header",
          "tittleBar": "header",
          "restore": [
            {
              "buttonName": "restoreBtn",
              "normalIcon": "",
              "maximizedIcon": ""
            }
          ]
        }
      ]
    }
  ],
  "QSettings": [
    {
      "ThemeSettings": [
        {
          "CustomTheme": [
            {
              "Background-color": "#FFFAF0",
              "Text-color": "#010000",
              "Accent-color": "#6495ED",
              "Icons-color": "#008080",
              "Theme-name": "Light",
              "Default-Theme": true
            },
            {
              "Background-color": "#2F4F4F",
              "Text-color": "#fefefe",
              "Accent-color": "#A9A9A9",
              "Icons-color": "#FFFAF0",
              "Theme-name": "Dark",
              "Default-Theme": true
            }
          ]
        }
      ],
      "AppSettings": {
        "OrginizationName": "MyCashFlow",
        "ApplicationName": "MyCashFlow Company",
        "OrginizationDormain": "MyCashFlow.org"
      }
    }
  ],
  "QPushButtonGroup": [
    {
      "Buttons": [
        "halamanTombol",
        "laporanTombol",
        "pemasukanTombol",
        "pengeluaranTombol"
      ],
      "ActiveButton": "halamanTombol",
      "Style": [
        {
          "Active": "QPushButton{background-color: THEME.COLOR_BACKGROUND_2; font-weight: bold; border-top: 2px solid $COLOR_BACKGROUND_3; border-left: 5px solid $COLOR_BACKGROUND_3; border-bottom: 6px solid $COLOR_BACKGROUND_3;}",
          "NotActive": "QPushButton{background-color: transparent; font-weight: normal; border-top: 2px solid transparent; border-left: 5px solid transparent; border-bottom: 6px solid transparent;}"
        }
      ]
    },
    {
      "Buttons": [
        "pengaturanTombol",
        "informasiTombol",
        "bantuanTombol",
        "keluarMenuTombol"
      ],
      "ActiveButton": "keluarMenuTombol",
      "Style": [
        {
          "Active": "QPushButton{background-color: THEME.COLOR_ACCENT_1; font-weight: bold; border-top: 6px solid $COLOR_BACKGROUND_3; border-left: 6px solid $COLOR_BACKGROUND_3; border-bottom: 6px solid $COLOR_BACKGROUND_3;}",
          "NotActive": "QPushButton{background-color: transparent; font-weight: normal; border-top: 6px solid transparent; border-left: 6px solid transparent; border-bottom: 6px solid transparent;}"
        }
      ]
    },
    {
      "Buttons": [
        "addIncomeButton",
        "addExpenseButton",
        "refreshButton",
        "refreshButton_2"
      ],
      "ActiveButton": "addIncomeButton",
      "Style": [
        {
          "Active": "QPushButton{background-color: THEME.COLOR_ACCENT_1; font-weight: bold; border-top: 6px solid $COLOR_BACKGROUND_3; border-left: 6px solid $COLOR_BACKGROUND_3; border-bottom: 6px solid $COLOR_BACKGROUND_3;}",
          "NotActive": "QPushButton{background-color: transparent; font-weight: normal; border-top: 6px solid transparent; border-left: 6px solid transparent; border-bottom: 6px solid transparent;}"
        }
      ]
    }
  ],
  "QCustomSlideMenu": [
    {
      "name": "leftMenu",
      "defaultSize": [
        {
          "width": 40,
          "height": "parent"
        }
      ],
      "collapsedSize": [
        {
          "width": 40,
          "height": "parent"
        }
      ],
      "expandedSize": [
        {
          "width": 130,
          "height": "parent"
        }
      ],
      "toggleButton": [
        {
          "buttonName": "menuTombol",
          "icons": [
            {
              "whenMenuIsCollapsed": ":/feather/icons/feather/align-justify.png",
              "whenMenuIsExpanded": ":/feather/icons/feather/arrow-left-circle.png"
            }
          ]
        }
      ],
      "menuTransitionAnimation": [
        {
          "animationDuration": 500,
          "animationEasingCurve": "Linear"
        }
      ]
    },
    {
      "name": "centerMenu",
      "defaultSize": [
        {
          "width": 0,
          "height": "parent"
        }
      ],
      "collapsedSize": [
        {
          "width": 0,
          "height": "parent"
        }
      ],
      "expandedSize": [
        {
          "width": 200,
          "height": "parent"
        }
      ],
      "menuTransitionAnimation": [
        {
          "animationDuration": 500,
          "animationEasingCurve": "Linear"
        }
      ]
    }
  ],
  "QCustomQStackedWidget": [
    {
      "name": "mainPages",
      "navigation": [
        {
          "navigationButtons": [
            {
              "halamanTombol": "menuHalaman",
              "pemasukanTombol": "pemasukanHalaman",
              "pengeluaranTombol": "pengeluaranHalaman",
              "laporanTombol": "laporanHalaman"
            }
          ]
        }
      ],
      "transitionAnimation": [
        {
          "fade": [
            {
              "active": true,
              "duration": 500,
              "easingCurve": "InSine"
            }
          ]
        }
      ]
    },
    {
      "name": "centerMenuPages",
      "navigation": [
        {
          "navigationButtons": [
            {
              "pengaturanTombol": "settingPage",
              "informasiTombol": "informationPage",
              "bantuanTombol": "helpPage"
            }
          ]
        }
      ],
      "transitionAnimation": [
        {
          "fade": [
            {
              "active": true,
              "duration": 500,
              "easingCurve": "InSine"
            }
          ]
        }
      ]
    }
  ]
}
